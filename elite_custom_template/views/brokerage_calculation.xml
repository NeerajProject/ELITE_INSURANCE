<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="brokerage_calculation_form_view" model="ir.ui.view">
            <field name="name">elite_custom_template.brokerage_calculation.form</field>
            <field name="model">brokerage.calculation</field>
            <field name="arch" type="xml">


                <form string="Brokerage Calculation">










                    <header>
                                                        <div name="button_box" position="inside">
                <button class="oe_stat_button"
                         type="object"
                         icon="fa-file"
                         string="Invoice"
                         name="action_get_invoice">
                </button>
            </div>
<!--                        <button type="object" string="Post" name="action_post"  invisible="status != 'draft'">-->
                        <button type="object" string="Post" name="action_post" >

                        </button>
                                                <field name="status" widget="statusbar"/>

                    </header>
                    <sheet>
  <div class="oe_title">
                        <h1 class="d-flex">
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                <field name="status"></field>
                          <group col="3" class="mb16">
                            <group>
                                <field name="branch_id"  readonly="status != 'draft'"></field>
<!--                                <field name="premium_paid_amounts"  readonly="status != 'draft'"></field>-->
                                <field name="date_from"  readonly="status != 'draft'"></field>

                            </group>
                            <group>
                                <field name="insurance_company"  readonly="status != 'draft'"></field>
                                <field name="policy_status"  readonly="status != 'draft'"></field>
                                <field name="date_to"  readonly="status != 'draft'"></field>
                            </group>
                            <group>
                                <field name="partner_id"  readonly="status != 'draft'"></field>
                                <field name="user_id"  readonly="status != 'draft'"></field>
                                <field name="policy_type"  readonly="status != 'draft'"></field>
                                <button name="action_filters" type="object" string="Filters"  invisible="status != 'draft'"></button>
                            </group>
                        </group>


                         <notebook>
                            <page name="premium_payments" string="Premium Payments">
                                <field name="brokerage_calculation_line_ids">

                                   <tree create="0" edit="1" editable="top" delete="0">
                                    <field name="insurer_partner_id"  readonly="1"></field>
                                    <field name="policy_no" readonly="1"></field>
                                    <field name="schedule_no" readonly="1"></field>
                                    <field name="type_of_policy" readonly="1"></field>
                                    <field name="customer_name_id" readonly="1"></field>
                                       <field name="total_premium_including_vat" readonly="1"></field>
                                       <field name="paid_including_vat" readonly="1"></field>
                                    <field name="outstanding_payment" readonly="1"></field>
                                       <field name="rate_of_commissions" readonly="1"></field>
                                       <field name="commissions_eligible_excluding_vat" readonly="1"></field>
                                       <field name="commission_to_clamed" readonly="1"></field>
                                       <field name="commission_outstanding_for_invoice" readonly="1"></field>
                                       <field name="commissions_to_invoice" readonly="status=='post'"></field>
                                       <field name="commissions_invoice_vat" readonly="1"></field>
                                       <field name="commission_invoice_including_vat" readonly="1"></field>
                                       <field name="select" readonly="status=='post'"></field>
                                       <field name="status" readonly="1"></field>



                                </tree>
                                </field>

   <div class="row">
           <div class="col-9" ></div>
    <div class="col-3"  style="font-size:22px">
                Total :

                                        <field name="total_amount"  widget="monetary"></field>


    </div>
   </div>

                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="brokerage_calculation_tree_view" model="ir.ui.view">
            <field name="name">elite_custom_template.brokerage_calculation.tree</field>
            <field name="model">brokerage.calculation</field>
            <field name="arch" type="xml">
                <tree string="Brokerage Calculation">
                        <field name="name"></field>
                </tree>
            </field>
        </record>



        <record id="brokerage_calculation_act_window" model="ir.actions.act_window">
            <field name="name">Brokerage Calculation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">brokerage.calculation</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem name="Brokerage Calculation" id="brokerage_calculation_menu"  action="brokerage_calculation_act_window"/>

    </data>
</odoo>